{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "lib": ["es2021"],
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true
    }
}
