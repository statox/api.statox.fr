{
    "comment": "Check recommended tsconfig files for each node version at https://github.com/tsconfig/bases?tab=readme-ov-file#centralized-recommendations-for-tsconfig-bases",
    "_version": "18.2.0",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2023"],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2022"
    }
}
