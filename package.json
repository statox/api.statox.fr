{
    "name": "api.statox.fr",
    "version": "1",
    "description": "The code for my personal API",
    "engines": {
        "node": "18.x"
    },
    "main": "index.ts",
    "scripts": {
        "setup-githooks": "./githooks/setup.sh",
        "check": "npm run lint && npm run prettier",
        "prettier": "prettier --check --cache '*.json' 'src/**/*.ts'",
        "prettier:fix": "prettier -w --cache '*.json' 'src/**/*.ts'",
        "lint": "eslint",
        "lint:fix": "npm run lint --fix",
        "heroku:login": "npx heroku login",
        "heroku:deploy": "npm run check && npm run tests:all && git push heroku main",
        "heroku:deploy:skip-tests": "npm run check && git push heroku main",
        "heroku:force-deploy": "npm run check && npm run tests:all && git push -f heroku main",
        "heroku:force-deploy:skip-tests": "npm run check && git push -f heroku main",
        "postinstall": "tsc",
        "env": "./src/tools/containers-env.sh up",
        "env:stop": "./src/tools/containers-env.sh down",
        "serve": "nodemon dist/index.js",
        "watch": "rm -fr dist/ && tsc -w",
        "tests": "PORT=3001 ENV=tests src/tools/init-db.sh --tests && PORT=3001 ENV=tests mocha --unhandled-rejections=strict --config .mocha/routes.json",
        "tests:all": "npm run tests:framework && npm run tests",
        "tests:framework": "PORT=3001 ENV=tests src/tools/init-db.sh --tests && PORT=3001 ENV=tests mocha --unhandled-rejections=strict --config .mocha/framework.json"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.665.0",
        "@aws-sdk/s3-request-presigner": "^3.665.0",
        "@elastic/elasticsearch": "~8.15.0",
        "@slack/webhook": "^7.0.3",
        "aws-sdk-client-mock": "^4.0.2",
        "cors": "^2.8.5",
        "express": "^4.21.0",
        "express-json-validator-middleware": "^3.0.1",
        "express-oauth2-jwt-bearer": "^1.1.0",
        "formidable": "^3.5.1",
        "jsdom": "^25.0.1",
        "luxon": "^3.5.0",
        "mime-types": "^2.1.35",
        "mustache-express": "^1.3.2",
        "mysql2": "^3.11.3"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.12.0",
        "@smithy/util-stream": "^3.1.2",
        "@types/chai": "^4.3.11",
        "@types/cors": "^2.8.17",
        "@types/eslint__eslintrc": "^2.1.2",
        "@types/eslint__js": "^8.42.3",
        "@types/express": "^5.0.0",
        "@types/formidable": "^3.4.5",
        "@types/jsdom": "^21.1.7",
        "@types/luxon": "^3.3.7",
        "@types/mime-types": "^2.1.4",
        "@types/mocha": "^10.0.8",
        "@types/mustache-express": "^1.2.5",
        "@types/sinon": "^17.0.2",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.8.0",
        "@typescript-eslint/parser": "^8.8.0",
        "aws-sdk-client-mock-jest": "^4.0.2",
        "chai": "^4.3.10",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.0.0",
        "globals": "^15.10.0",
        "mocha": "^10.7.3",
        "nodemon": "^3.1.7",
        "prettier": "^3.3.3",
        "sinon": "^18.0.0",
        "supertest": "^7.0.0",
        "typescript": "^5.6.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/statox/api.statox.fr"
    },
    "license": "MIT"
}
